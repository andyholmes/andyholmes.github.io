---
layout: base
---
{# Only include the syntax highlighter CSS on blog posts #}
{%- css %}{% include "../assets/css/code.css" %}{% endcss %}

<div class="post-header" role="group">
  <h1>{{ title }}</h1>
  <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
  &bull;
  <ul aria-label="Tags">
    {%- for tag in tags %}
    <li class="tag"><a href="/tags/{{ tag | slugify }}/">{{ tag }}</a></li>
    {%- endfor %}
  </ul>
</div>

{{ content | safe }}
