---
layout: base
pagination:
  data: collections
  alias: tag
  size: 1
  filter:
    - all
    - latest
    - posts
  addAllPagesToCollections: true
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: Tagged “{{ tag }}”
---
<h1>{{ title }}</h1>

<section>
{% for post in collections[tag] | reverse %}
  <article class="post-summary" aria-labelledby="{{ post.data.title | slugify }}">
    <h3 id="{{ post.data.title | slugify }}"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    <p>{{ post.content | excerpt }}</p>
  </article>
{% endfor %}
</section>

<p>
  <a href="/tags/">All Tags</a>
</p>
