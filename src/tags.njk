---
layout: base
title: Tags
---
<h1>{{ title }}</h1>

{% for tag in collections.posts | getTags %}
<section aria-labelledby="{{ tag }}-header">
  <h2 id="{{ tag }}-header" style="font-family: monospace">{{ tag }}</h2>
  {% for post in collections[tag] | reverse %}
  <article class="post-summary" aria-labelledby="{{ post.data.title | slugify }}">
    <h3 id="{{ post.data.title | slugify }}"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
  </article>
  {% endfor %}
</section>
{% endfor %}
